# ===== Required =====
DISCORD_TOKEN="<<your_token>>"
TOKEN="<<your_token>>"

CHANNEL_IDS="<<your_channel_ids>>"
CHANNEL_ID ="<<your_channel_id>>"

# ===== Export window =====
# EXPORT_MODE can be: all | last_n_days
EXPORT_MODE=last_n_days
LAST_N_DAYS=14

# ===== Filtering & tagging =====
# Drop only super-useless chat; keep most content
USELESS_THRESHOLD=0.18

# Dedupe: higher = stricter dedupe (drop near-identical)
DEDUP_SIMILARITY=92

# ===== Mindmap size control =====
# Rotate to new map when too large
MAX_NODES=2200
MAX_BYTES=900000

# ===== Markmap HTML =====
GENERATE_HTML=1

BASE_DIR="${PWD}/../"
BIN_DIR="${BASE_DIR}/bin"
EXPORT_DIR="${BASE_DIR}/exports"
OUT_DIR="${BASE_DIR}/out"
EXPORTFORMAT="json"

OLLAMA_MODEL="qwen2.5:7b-instruct"
